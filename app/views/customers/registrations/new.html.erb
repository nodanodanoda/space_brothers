<div class="container">
  <div class="main">
    <div class="row">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


        <table class="table">
          <tr>
            <th>名前</th>
            <td>
              <div class="field">
                <%= f.label :姓 %>
                <%= f.text_field :name_sei, autofocus: true, autocomplete: "name_sei" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.label :名 %>
                <%= f.text_field :name_mei, autofocus: true, autocomplete: "name_mei" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <div class="field">
                <%= f.label :セイ %>
                <%= f.text_field :yomi_sei, autofocus: true, autocomplete: "yomi_sei" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.label :メイ %>
                <%= f.text_field :yomi_mei, autofocus: true, autocomplete: "yomi_mei" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td colspan="2">
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td colspan="2">
              <div class="field">
                <%= f.telephone_field :tell, autofocus: true, autocomplete: "tell" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>パスワード（６文字以上）</th>
            <td colspan="2">
              <div class="field">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
            <td colspan="2">
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
        </table>
          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>


      <%= render "customers/shared/links" %>
    </div>
  </div>
</div>

