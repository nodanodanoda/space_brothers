
<div class="container">
	<div class="main">
	  <div class="row">
      <h1 class="mypage">マイページ <i class="fas fa-user-cog"></i></h1>
        <div class="col-xs-5">					
					<h3>登録情報 <i class="fas fa-cog"></i></h3>
					<a><%= link_to '編集する', customers_fix_path, class:"btn btn-primary" %></a>
          <a><%= link_to 'パスワード変更', edit_customer_registration_path, class:"btn btn-info" %></a>

					<table class="table">
						<tr>
							<th>氏名</th>
							<td><%= @customer.name_sei %> <%= @customer.name_mei %></td>
						</tr>
						<tr>
							<th>カナ</th>
							<td><%= @customer.yomi_sei %> <%= @customer.yomi_mei %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= @customer.postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= @customer.address %></td>
						</tr>
						<tr>
							<th>電話番号</th>
							<td><%= @customer.tell %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= @customer.email %></td>
						</tr>
					</table>
      </div>
    </div>
	</div>
</div>
