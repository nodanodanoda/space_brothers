<div class="container">
  <div class="row">
  

    <div class="col-xs-10">
     <div class="main-body">
      <div class="row">
          <h2 class="product_index_title">商品一覧<i class="fas fa-cookie-bite"></i></h2><p class="count"><%= "全#{Travel.all.count}件" %></p>
          <h3 class="genre-title">ジャンル</h3>
          <% @genres.each do |genre| %>
          <div class="genre-name"><a href="<%=  customers_travel_genre_path(genre.id) %>"><%= genre.genre %></a></div>
              <% @travels.each do |travel| %>
                <% if travel.travel_genre_id == genre.id %>
                  <div class="col-md-3">
                    <div class="travel-page">
                        <%= link_to customers_travel_path(travel.id) do %>
                          <%= attachment_image_tag travel, :picture, format:'jpeg', size:"150x150" %><br>
                          <div class="travel_price1"><%= travel.name %><br></div>
                          <p class="travel_price2"><%= converting_to_jpy(travel.price) %></p><br>
                    </div>
                        <% end %>
                  </div>
                  <% end %>
             <% end %>
          <% end %>
       </div>
     </div>
     </div>
  </div>
</div>
