<div class="container">
  <div class="row">
    <h1>登録情報編集 <i class="fas fa-user-cog"></i></h1><br>
    <%= form_with model: @customer, url: '/customers/fix',local: true do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <div class="field">
              <%= f.label :姓 %>
              <%= f.text_field :name_sei, autofocus: true, autocomplete: "name_sei" %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= f.label :名 %>
              <%= f.text_field :name_mei, autofocus: true, autocomplete: "name_mei" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <div class="field">
              <%= f.label :セイ %>
              <%= f.text_field :yomi_sei, autofocus: true, autocomplete: "yomi_sei" %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= f.label :メイ %>
              <%= f.text_field :yomi_mei, autofocus: true, autocomplete: "yomi_mei" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan="2">
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td colspan="2">
            <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td colspan="2">
            <div class="field">
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td colspan="2">
            <div class="field">
              <%= f.telephone_field :tell, autofocus: true, autocomplete: "tell" %>
            </div>
          </td>
        </tr>
      </table>
        <div class="actions">
          <%= f.submit "編集内容を保存する", class:"btn btn-primary"%>
        </div>
    <% end %>
  </div>
</div>

