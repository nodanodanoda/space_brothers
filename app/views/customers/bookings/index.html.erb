<div class="container">
	<div class="main">
    <div class="row">
			<div class="midasi">
				<h3 class="midasitext">予約一覧</h3>
			</div>

			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>旅行</th>
						<th>予約日時</th>
						<th>出発日・帰還日</th>
					</tr>
				</thead>

				<tbody>
					<% @bookings.each do |booking| %>
					<tr>
						<td><a href="<%= customers_booking_path(booking.id) %>"><%= booking.travel.name%></a></td>
						<td><%= l booking.created_at%></td>
						<td><%= booking.start_day%>・<%= booking.end_day%></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>