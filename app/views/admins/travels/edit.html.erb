<div class="container">
	<div class="main">
    <div class="row">
			<div class="midasi">
				<h3 class="midasitext">旅行編集</h3>
			</div>

			<div class="travel_form">
			<%= form_for @travel, url: admins_travel_path(@travel.id) do |f| %>
				<div class="admin_picture">
					<%= attachment_image_tag @travel, :picture, size: "200x200" %>
					<div class="picture">
						<%= f.attachment_field :picture %>
					</div>
				</div>

				<div class="explain">
					<div class="travel_name">
						<div class="admin_label">
							<%= f.label :商品名 %>
						</div>
						<div class="explain_text">
							<%= f.text_field :name %>
						</div>
					</div>
					<div class="travel_days">
						<div class="admin_label">
							<%= f.label :日数 %>
						</div>
						<div class="explain_text">
							<%= f.text_field :days %>日
						</div>
					</div>
					<div class="travel_description">
						<div class="admins_label">
							<%= f.label :商品説明 %>
						</div>
						<div class="explains_text">
							<%= f.text_area :description %>
						</div>
					</div>
					<div class="travel_genre">
						<div class="admin_label">
							<%= f.label :ジャンル %>
						</div>
						<div class="explain_text">
							<%= f.collection_select :travel_genre_id, TravelGenre.where(is_valid: true), :id, :genre, :prompt => "ジャンル" %>
						</div>
					</div>
					<div class="travel_price">
						<div class="admin_label">
							<%= f.label :値段 %>
						</div>
						<div class="explain_text">
							<%= f.text_field :price %>円
						</div>
					</div>
					<div class="travel_status">
						<div class="admin_label">
							<%= f.label :販売ステータス %>
						</div>
						<div class="explain_text">
							<%= f.select :sales_status,options_for_select(Travel.sales_statuses.keys.map {|k| [I18n.t("enums.travel.sales_status.#{k}"), k]},:selected => @travel.sales_status) %>
						</div>
					</div>
					<div class="admin_button">
			  			<%= f.submit '変更を保存' %>
			  		</div>
			  	</div>
			<% end %>
			</div>
		</div>
	</div>
</div>
