<div class="container">
	<div class="main">
    <div class="row">
			<div class="midasi">
				<h3 class="midasitext">旅行一覧</h3>
			</div>

			<div class="addproduct">
				<%= link_to "旅行追加", new_admins_travel_path %>
			</div>

			<div class="genrelists">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>ID</th>
							<th>旅行名前</th>
							<th>日数</th>
							<th>値段</th>
							<th>ジャンル</th>
							<th>ステータス</th>
						</tr>
					</thead>

					<tbody>
						<% @travels.each do |travel| %>
						<tr>
							<td><%= travel.id %></td>
							<td><a href="<%= admins_travel_path(travel.id) %>"><%= travel.name %></a></td>
							<td><%= travel.days %> 日</td>
							<td><%= converting_to_jpy(travel.price) %></td>
							<td><%= travel.travel_genre.genre %></td>
							<td><%= travel.sales_status_i18n %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
