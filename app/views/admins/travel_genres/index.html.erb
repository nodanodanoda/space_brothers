<h1>ジャンル一覧</h1>
<div class="genre_form">
	<%= form_for @newgenre, url: admins_travel_genres_path do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :genre %>
		<%= f.radio_button :is_valid, true %>
		<%= f.label :is_valid, "有効" %>
  		<%= f.radio_button :is_valid, false %>
  		<%= f.label :is_valid, "無効" %>
  		<%= f.submit '追加' %>
  	<% end %>
</div>
<div class="genrelists">
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.genre %></td>
				<td><%= genre.is_valid ? t('valid' ) : t('invalid')%></td>
				<td><div class="btn btn-primary active"><%= link_to "編集", edit_admins_travel_genre_path(genre.id) %></div></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
