<div class="container">
	<div class="main">
    <div class="row">
			<h1>会員一覧</h1>

			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>会員ID</th>
						<th>氏名</th>
						<th>メールアドレス</th>
						<th>会員ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<td><a href="<%= admins_customer_path(customer.id) %>"><%= customer.name_sei%><%= customer.name_mei%></a></td>
						<td><%= customer.email %></td>
						<td><% if customer.status == true %>
								<p>有効</p>
							<% else %>
								<p>退会済み</p>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

