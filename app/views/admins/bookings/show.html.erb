<table><tr>
		<th>旅行名</th>
		<td><%= @booking.travel.name %></td>
	</tr>
	<tr>
		<th>値段</th>
		<td><%= converting_to_jpy(@booking.travel.price) %></td>
	</tr>
	<tr>
		<th>日数</th>
		<td><%= @booking.travel.days %>日</td>
	</tr>
	<tr>
		<th>出発・帰還日</th>
		<td><%= @booking.start_day %> <%= @booking.end_day %></td>
	</tr>
	<tr>
		<th>氏名</th>
		<td><%= @booking.customer.name_sei %> <%= @booking.customer.name_mei %></td>
	</tr>
	<tr>
		<th>カナ</th>
		<td><%= @booking.customer.yomi_sei %> <%= @booking.customer.yomi_mei %></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= @booking.customer.postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @booking.customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= @booking.customer.tell %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @booking.customer.email %></td>
	</tr>
</table>