<!DOCTYPE html>
<html>
  <head>
    <title>SpaceBrothers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
            <%= link_to image_tag("title.jpg", size:'260x83'), "/" %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><%= link_to 'アバウト', about_path, class:"" %></li>
              <li><%= link_to 'マイページ', customers_mypage_path, class:"fas fa-user-cog" %></li>
              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:"fas fa-sign-out-alt" %></li>
            <% else %>
              <li><%= link_to 'アバウト', about_path, class:"" %></li>
              <li><%= link_to '会員登録', '/customers/sign_up', class:"fas fa-user-plus" %></li>
              <li><%= link_to 'ログイン', new_customer_session_path, class:"fas fa-sign-in-alt" %></li>
            <% end %>

          </ul>
        </nav>

      </div>
    </header>

    <div class="container">
      <div class="main">
        <%= yield %>
        <p id="notice"><%= notice %></p>
      </div>
    </div>
  </body>
</html>
